# 1. استنسخ المشروع
git clone https://github.com/yourusername/whatsapp-companion-bot.git
cd whatsapp-companion-bot

# 2. بناء الصورة
docker build -t whatsapp-companion-bot .

# 3. تشغيل الحاوية
docker run -d \
  --name wabot \
  -v $(pwd)/data:/app/data \
  -v $(pwd)/exports:/app/exports \
  whatsapp-companion-bot
